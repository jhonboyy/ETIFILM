# Habilitar el motor de reescritura
RewriteEngine On
RewriteBase /

# Redirigir WWW a dominio no-WWW y asegurar HTTPS
RewriteCond %{HTTP_HOST} ^www\.etifilm\.com$ [NC]
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L,NE]

# Prevenir el listado de directorios
Options -Indexes

# Establecer la codificación de caracteres predeterminada
AddDefaultCharset UTF-8

# Establecer tipos MIME para tipos de archivos específicos
AddType text/css .css
AddType application/javascript .js
AddType image/jpeg .jpg .jpeg
AddType image/png .png
AddType image/gif .gif

# Configurar caché y encabezados para diferentes tipos de archivos
<ifModule mod_expires.c>
    ExpiresActive On

    # Caché para archivos de medios por 1 mes
    <FilesMatch "\.(ico|gif|jpg|jpeg|png|flv|pdf|swf|mov|mp3|wmv|ppt)$">
        ExpiresDefault "access plus 1 month"
        Header append Cache-Control "public"
    </FilesMatch>

    # Caché para archivos comúnmente actualizados por 2 horas
    <FilesMatch "\.(xml|txt|html|js|css)$">
        ExpiresDefault "access plus 2 hours"
        Header append Cache-Control "private, must-revalidate"
    </FilesMatch>

    # Forzar no caché para archivos dinámicos
    <FilesMatch "\.(php|cgi|pl|htm)$">
        ExpiresDefault "access plus 0 seconds"
        Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
    </FilesMatch>
</ifModule>

# Bloquear el acceso a archivos sensibles
<FilesMatch "\.(htaccess|htpasswd|ini|log|git)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevenir hotlinking de imágenes con permitir vacíos y desde etifilm.com
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?etifilm\.com [NC]
RewriteRule \.(jpg|jpeg|png|gif)$ - [NC,F,L]

# Establecer el archivo por defecto para cargar
DirectoryIndex index.html index.php

# Habilitar compresión
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "http://localhost:8080"
    Header set Access-Control-Allow-Methods "POST, GET, OPTIONS, DELETE, PUT"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
    Header set Access-Control-Allow-Credentials "true"
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>


